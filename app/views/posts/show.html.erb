<p style="color: green"><%= flash[:success] %></p>

<%= render @post %>

<div class = "container my-5">
    <div class = "row">
      <div class = "col-12 row down">
        <p class="ebdShow col-3 py-3 userBG">>
        <%= link_to "Add comment", new_user_post_comment_path(@post.author, @post) %>
        </p>

      <%= form_with url: "/users/#{@post.author.id}/posts/#{@post.id}/likes" ,class: "col-6 likeCount" do |form|%>
            <%= form.submit "like post", class: "col-12"%>
        <% end %>
    </div>
  </div>
</div>

<div class = "container my-5 py-5 userBG">
    <div class = "row">
      <div class="col-12 row">
          <h5 class="text-light">Comments</h5>
          <% @post.comments.includes(:author).each do |comment| %>
              <div>
                <span><%= @post.author.name %>:</span>
              <span><%= comment.text %></span>
            </div>
          <% end %>
    </div>  
  </div>
</div>


