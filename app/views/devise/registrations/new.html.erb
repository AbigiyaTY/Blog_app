
<h2 class="welcome">Hello! you can register here.</h2>
<div class="sign-up-container">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :name, class: "flabel" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "finput" %>
  </div>
  <div class="field">
    <%= f.label :email, class: "flabel" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "finput" %>
  </div>
 <div class="field">
    <%= f.label :bio, class: "flabel" %><br />
    <%= f.text_field :bio, autofocus: true, autocomplete: "name", class: "finput" %>
  </div>
  <div class="field">
    <%= f.label :photo_url, class: "flabel" %><br />
    <%= f.text_field :photo, autofocus: true, autocomplete: "name", class: "finput" %>
  </div>
  <div class="field">
    <%= f.label :password, class: "flabel" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "finput" %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, class: "flabel" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "finput" %>
  </div>
  <div class="actions">
    <%= f.submit "Sign up", data: { turbo: false}, class: "sign-up-btn" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>